[
  {
    "outputFileName": "wwwroot/css/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/site.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/js/site.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  },

  {
    "outputFileName": "wwwroot/css/mdboostrap.min.css",
    "inputFiles": [
      "wwwroot/mdbfree/css/boostrap.min.css",
      "wwwroot/mdbfree/css/mdb.min.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/mdboostrap.min.js",
    "inputFiles": [
      "wwwroot/mdbfree/js/jquery-3.2.1.min.js",
      "wwwroot/mdbfree/js/boostrap.min.js",
      "wwwroot/mdbfree/js/mdb.min.js",
      "wwwroot/mdbfree/js/popper.min.js"
    ]
  }
]
